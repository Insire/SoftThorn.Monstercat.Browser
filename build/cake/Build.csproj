<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>

        <!-- Make sure start same folder .NET Core CLI and Visual Studio -->
        <RunWorkingDirectory>$(MSBuildProjectDirectory)</RunWorkingDirectory>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Cake.Compression" Version="0.3.0" />
        <PackageReference Include="Cake.Frosting" Version="3.0.0" />
        <PackageReference Include="Cake.GitVersioning" Version="3.5.119" />
        <PackageReference Include="Cake.Incubator" Version="7.0.0" />
        <PackageReference Include="SharpZipLib" Version="1.4.1" />

        <PackageReference Include="GitVersion.CommandLine" Version="5.11.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
</Project>
